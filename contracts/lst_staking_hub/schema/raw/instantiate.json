{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "InstantiateMsg",
  "type": "object",
  "required": [
    "epoch_length",
    "staking_coin_denom",
    "staking_epoch_length_blocks",
    "staking_epoch_start_block_height",
    "unstaking_period"
  ],
  "properties": {
    "epoch_length": {
      "description": "Time to batch the unstake request in the staking hub. Should match the epoch length of chain",
      "type": "integer",
      "format": "uint64",
      "minimum": 0.0
    },
    "staking_coin_denom": {
      "description": "Denom to use for staking",
      "type": "string"
    },
    "staking_epoch_length_blocks": {
      "description": "Staking epoch length in blocks e.g. 360 in testnet",
      "type": "integer",
      "format": "uint64",
      "minimum": 0.0
    },
    "staking_epoch_start_block_height": {
      "description": "Staking epoch start block height, this is inclusive in the epoch",
      "type": "integer",
      "format": "uint64",
      "minimum": 0.0
    },
    "unstaking_period": {
      "description": "Unstaking period of the chain",
      "type": "integer",
      "format": "uint64",
      "minimum": 0.0
    }
  },
  "additionalProperties": false
}
