      "hub_contract",
      "validators"
    ],
    "properties": {
      "hub_contract": {
        "description": "Address of the hub contract",
        "type": "string"
      },
      "validators": {
        "description": "Address of the validators to delegate",
        "type": "array",
        "items": {
          "$ref": "#/definitions/Validator"
        }
      }
    },
    "additionalProperties": false,
    "definitions": {
      "Validator": {
        "type": "object",
        "required": [
          "address"
        ],
        "properties": {
          "address": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "execute": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "ExecuteMsg",
    "oneOf": [
      {
        "description": "Add new validator in the registry",
        "type": "object",
        "required": [
          "add_validator"
        ],
        "properties": {
          "add_validator": {
            "type": "object",
            "required": [
              "validator"
            ],
            "properties": {
              "validator": {
                "description": "Address of the validator",
                "allOf": [
                  {
                    "$ref": "#/definitions/Validator"
                  }
                ]
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      },
      {
        "description": "Remove validator from the registry",
        "type": "object",
        "required": [
          "remove_validator"
        ],
        "properties": {
          "remove_validator": {
            "type": "object",
            "required": [
              "address"
            ],
            "properties": {
              "address": {
                "description": "Address of the valid",
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      },
      {
        "description": "Admin can update the config using this method",
        "type": "object",
        "required": [
          "update_config"
        ],
        "properties": {
          "update_config": {
            "type": "object",
            "properties": {
              "hub_contract": {
                "description": "Address of the hub contract",
                "type": [
                  "string",
                  "null"
                ]
              },
              "owner": {
                "description": "Owner of the contract",
                "type": [
                  "string",
                  "null"
                ]
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      },
      {
        "description": "Process redelegations if validator is removed",
        "type": "object",
        "required": [
          "process_redelegations"
        ],
        "properties": {
          "process_redelegations": {
            "type": "object",
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    ],
    "definitions": {
      "Validator": {
        "type": "object",
        "required": [
          "address"
        ],
        "properties": {
          "address": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "query": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "QueryMsg",
    "oneOf": [
      {
        "type": "string",
        "enum": [
          "exclude_list"
        ]
      },
      {
        "description": "Return the delegation done by the hub contract in the network",
